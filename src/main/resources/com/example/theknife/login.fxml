<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.theknife.LoginController"
            prefWidth="600" prefHeight="400"
            stylesheets="/data/stile.css">
    <children>
        <!-- Una VBox centrata che contiene una "card" di login -->
        <VBox alignment="CENTER" spacing="10.0"
              AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <children>
                <!-- Card di login con stile professionale -->
                <VBox spacing="20" alignment="CENTER" styleClass="login-card">
                    <children>
                        <!-- Titolo -->
                        <Label text="Benvenuto in TheKnife" styleClass="login-title"/>

                        <!-- Input per il nome utente - AGGIORNATO -->
                        <TextField fx:id="campoUsername" promptText="Nome Utente"
                                   maxWidth="280" styleClass="login-textfield"/>

                        <!-- Input per la password (nascosta) - AGGIORNATO -->
                        <PasswordField fx:id="campoPassword" promptText="Password"
                                       maxWidth="280" styleClass="login-textfield"/>

                        <!-- Bottone principale per il login - AGGIORNATO -->
                        <Button fx:id="pulsanteAccesso" text="Accedi"
                                maxWidth="280" styleClass="primary-button"
                                onAction="#gestisciAccesso"/>

                        <!-- Bottone per accesso senza login - AGGIORNATO -->
                        <Button fx:id="pulsanteSenzaLogin" text="Accedi senza login"
                                maxWidth="280" styleClass="secondary-button"
                                onAction="#gestisciAccessoSenzaLogin"/>

                        <!-- Informazioni di debug aggiornate con password corrette -->
                        <Label text="Test utenti: mario.rossi/hello, giulia.bianchi/secret, luca.verdi/password"
                               style="-fx-font-size: 10px; -fx-text-fill: #666666; -fx-wrap-text: true;"
                               maxWidth="280"/>

                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>