<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>

<ScrollPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.theknife.RistoranteInputController">
    <content>
        <VBox spacing="15" style="-fx-padding: 20;">
            <Label text="Aggiungi Nuovo Ristorante" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="100" prefWidth="150"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <!-- Nome -->
                <Label text="Nome*:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nomeField" promptText="Nome del ristorante" 
                         GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- Indirizzo -->
                <Label text="Indirizzo*:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="indirizzoField" promptText="Via e numero civico" 
                         GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <!-- Località -->
                <Label text="Località*:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="localitaField" promptText="Città, Provincia" 
                         GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <!-- Prezzo -->
                <Label text="Fascia Prezzo*:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ComboBox fx:id="prezzoComboBox" promptText="Seleziona fascia di prezzo"
                         GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <!-- Cucina -->
                <Label text="Tipi di Cucina*:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <ListView fx:id="cucinaListView" prefHeight="100" 
                         GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                <Label text="(Seleziona uno o più tipi tenendo premuto Ctrl/Cmd)" 
                      GridPane.rowIndex="4" GridPane.columnIndex="1" 
                      GridPane.valignment="BOTTOM" style="-fx-font-size: 10;"/>

                <!-- Premi -->
                <Label text="Premi:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <VBox spacing="5" GridPane.rowIndex="5" GridPane.columnIndex="1">
                    <ComboBox fx:id="premiComboBox" promptText="Seleziona premi"/>
                    <CheckBox fx:id="stellaVerdeCheckBox" text="Stella Verde Michelin"/>
                </VBox>

                <!-- Coordinate -->
                <Label text="Coordinate:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <HBox spacing="10" GridPane.rowIndex="6" GridPane.columnIndex="1">
                    <TextField fx:id="longitudineField" promptText="Longitudine"/>
                    <TextField fx:id="latitudineField" promptText="Latitudine"/>
                </HBox>

                <!-- Telefono -->
                <Label text="Telefono:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <TextField fx:id="telefonoField" promptText="Numero di telefono" 
                         GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                <!-- URL -->
                <Label text="URL:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                <TextField fx:id="urlField" promptText="URL della pagina web" 
                         GridPane.rowIndex="8" GridPane.columnIndex="1"/>

                <!-- Sito Web -->
                <Label text="Sito Web:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
                <TextField fx:id="sitoWebField" promptText="Sito web del ristorante" 
                         GridPane.rowIndex="9" GridPane.columnIndex="1"/>
            </GridPane>                <!-- Servizi -->
            <Label text="Servizi Disponibili:"/>
            <ListView fx:id="checkBoxServizi" prefHeight="150" />
            <Label text="(Seleziona uno o più servizi tenendo premuto Ctrl/Cmd)" 
                   style="-fx-font-size: 10;"/>

            <!-- Descrizione -->
            <Label text="Descrizione:"/>
            <TextArea fx:id="descrizioneArea" promptText="Inserisci una descrizione del ristorante"
                     prefRowCount="4" wrapText="true"/>

            <!-- Bottoni -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Annulla" onAction="#handleAnnulla"/>
                <Button text="Salva" onAction="#handleSalva" defaultButton="true"/>
            </HBox>

            <Label text="* Campi obbligatori" style="-fx-font-style: italic;"/>
        </VBox>
    </content>
</ScrollPane>